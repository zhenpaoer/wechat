  padding: 4rpx 24rpx 26rpx;
  background-color: #fff;
}
.page-index .home-search-in {
  color: #999;
  height: 68rpx;
  line-height: 68rpx;
  text-align: left;
  font-size: 28rpx;
  border-radius: 34rpx;
  padding: 0 32rpx;
  box-shadow: 0 0 8rpx rgba(0,0,0,.1);
}
.page-index .home-search-img {
  width: 30rpx;
