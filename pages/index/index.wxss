.item-root {
  box-shadow: 0 4px 8px 0 gainsboro;
  width: 90%;
  margin: 3%;
  background: white;
  padding: 2%;
  border-radius: 5px;
  display: flex;
  /* flex-direction: column; */
}
.item-detail{ 
  margin: 2px 2px 2px 4px; /* 上、右、下、左 */
  display: flex;
  flex-direction: column;
}
.item-price{
  margin: 50px 20px 2px 4px; /* 上、右、下、左 */
  display: flex;
  flex-direction: row;
}
